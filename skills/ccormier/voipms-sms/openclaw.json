{
  "name": "voipms-sms",
  "version": "1.0.1",
  "author": "Chris Cormier",
  "description": "OpenClaw skill for sending and retrieving SMS messages via the VoIP.ms API (no Bitwarden dependency).",
  "requires": {
    "env": [
      "VOIPMS_API_USERNAME",
      "VOIPMS_API_PASSWORD"
    ]
  },
  "tools": [
    {
      "name": "send_sms",
      "description": "Send an SMS via VoIP.ms",
      "command": "python3 scripts/send_sms.py"
    },
    {
      "name": "get_sms",
      "description": "Retrieve SMS messages via VoIP.ms",
      "command": "python3 scripts/get_sms.py"
    }
  ]
}
