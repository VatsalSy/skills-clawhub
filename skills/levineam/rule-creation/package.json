{
  "name": "rule-creation",
  "version": "1.1.0",
  "description": "Auto-triggers Context Engineering compliance and Lobster evaluation when creating rules",
  "author": "andrarchy",
  "license": "MIT",
  "keywords": [
    "governance",
    "lobster",
    "rules",
    "enforcement",
    "context-engineering",
    "jarvis",
    "openclaw",
    "jarvos"
  ],
  "openclaw": {
    "skill": true,
    "skillName": "rule-creation",
    "skillFile": "SKILL.md",
    "triggers": [
      "proposing a rule",
      "creating a policy",
      "formalizing a constraint",
      "new behavioral rule",
      "wire this rule",
      "from now on",
      "make it a hard rule"
    ]
  },
  "scripts": {
    "test": "node scripts/test-skill.js",
    "evaluate": "node scripts/evaluate-enforcement-need.js",
    "wire": "node scripts/wire-rule-to-docs.js",
    "report": "node scripts/report-rule-creation.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
