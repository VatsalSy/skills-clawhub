{
  "skill": "x-twitter-collector",
  "version": "1.0.0",
  "description": "Collect and analyze X/Twitter user tweets from the past 24 hours",
  
  "browser": {
    "profile": "openclaw",
    "waitTimeMs": 5000,
    "fullPageScreenshot": true,
    "screenshotFormat": "png"
  },
  
  "report": {
    "language": "bilingual",
    "languages": ["zh-CN", "en-US"],
    "includeScreenshot": true,
    "includeLinks": true,
    "includeEngagement": true,
    "includeTopicAnalysis": true
  },
  
  "timeRange": {
    "default": "24h",
    "options": ["1h", "6h", "12h", "24h", "48h", "7d"]
  },
  
  "parsing": {
    "selectors": {
      "tweet": "article",
      "timestamp": "time",
      "content": "[data-testid='tweetText']",
      "engagement": "[role='group']",
      "retweet": "已转帖|Retweeted"
    },
    "refFormat": "aria"
  },
  
  "output": {
    "format": "markdown",
    "screenshotDir": "/Users/chendongtao/.openclaw/media/browser",
    "reportDir": "/Users/chendongtao/.openclaw/workspace/reports"
  },
  
  "limits": {
    "maxTweets": 100,
    "maxScrolls": 10,
    "scrollDelayMs": 2000
  },
  
  "features": {
    "autoScroll": true,
    "retryOnError": true,
    "maxRetries": 3,
    "cacheEnabled": false
  }
}
