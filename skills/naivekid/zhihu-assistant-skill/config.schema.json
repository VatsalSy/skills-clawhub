{
  "name": "zhihu-assistant",
  "description": "知乎热榜抓取与回答草稿生成助手",
  "version": "1.0.0",
  "author": "naiveKid",
  "config": {
    "zhihu_cookie": {
      "type": "string",
      "description": "知乎登录 Cookie，从浏览器开发者工具复制",
      "required": true,
      "secret": true
    },
    "kimi_api_key": {
      "type": "string",
      "description": "Kimi API Key，从 https://platform.moonshot.cn/ 获取",
      "required": true,
      "secret": true
    },
    "doubao_api_key": {
      "type": "string",
      "description": "豆包 API Key（备用，与 Kimi 二选一）",
      "required": false,
      "secret": true
    },
    "feishu_user_id": {
      "type": "string",
      "description": "飞书用户 ID，用于接收推送通知",
      "required": false
    },
    "fetch_limit": {
      "type": "integer",
      "description": "每次抓取热榜数量",
      "default": 10,
      "minimum": 1,
      "maximum": 50
    },
    "min_heat": {
      "type": "number",
      "description": "最小热度过滤（万）",
      "default": 10,
      "minimum": 0
    }
  }
}
