{
  "name": "@dessix/skill",
  "private": true,
  "version": "0.1.0",
  "description": "Dessix skills workspace for ClawHub publishing.",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "bridge:health": "node ./scripts/dessix-bridge.mjs health",
    "bridge:invoke": "node ./scripts/dessix-bridge.mjs invoke",
    "clawhub:publish": "clawhub publish . --slug dessix-skill --name \"Dessix Skill\" --tags latest",
    "clawhub:sync": "clawhub sync --root . --bump patch --tags latest"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "prettier": "^3.8.1"
  }
}
