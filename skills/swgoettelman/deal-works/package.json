{
  "name": "@swgoettelman/deal-works-mcp",
  "version": "0.1.1",
  "description": "MCP server exposing deal.works platform tools to AI agents - 39 tools across 9 engines for deals, escrow, agents, attestations, and more",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "deal-works-mcp": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@goettelman/config": "workspace:*",
    "@types/node": "^22.9.0",
    "eslint": "^9.15.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.0"
  },
  "files": [
    "dist",
    "configs",
    "README.md",
    "SKILL.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "deal-works",
    "ai-agents",
    "escrow",
    "smart-contracts",
    "attestation",
    "claude",
    "openai",
    "anthropic",
    "perplexity",
    "openclaw"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/goettelman/deal.works.git",
    "directory": "packages/deal-works-mcp"
  },
  "homepage": "https://deal.works",
  "bugs": {
    "url": "https://github.com/goettelman/deal.works/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
