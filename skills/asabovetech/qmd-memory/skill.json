{
  "name": "qmd-memory",
  "version": "1.0.0",
  "description": "Local hybrid search for OpenClaw â€” Save $50-300/month in API costs. Combines BM25, vector search, and LLM re-ranking, all running locally.",
  "author": {
    "name": "As Above Technologies",
    "email": "support@asabove.tech",
    "url": "https://asabove.tech"
  },
  "repository": "https://github.com/asabove/qmd-memory-skill",
  "license": "MIT",
  "keywords": [
    "memory",
    "search",
    "qmd",
    "local",
    "hybrid",
    "vector",
    "embeddings",
    "cost-savings",
    "semantic-search"
  ],
  "category": "memory",
  "pricing": {
    "model": "free",
    "note": "Free forever. Save $50-300/month in API costs."
  },
  "requirements": {
    "node": ">=22",
    "disk": "3GB",
    "ram": "2GB"
  },
  "commands": {
    "setup": {
      "description": "Install QMD and configure collections for your workspace",
      "script": "scripts/setup.sh"
    },
    "calculate-savings": {
      "description": "Calculate how much you'll save in API costs",
      "script": "scripts/calculate-savings.sh"
    },
    "refresh": {
      "description": "Update index and regenerate embeddings",
      "script": "scripts/refresh.sh"
    },
    "serve": {
      "description": "Start QMD as shared MCP server for multi-agent setups",
      "script": "scripts/serve.sh"
    },
    "add-collection": {
      "description": "Add a new collection to your index",
      "script": "scripts/add-collection.sh"
    }
  },
  "templates": {
    "trading": {
      "description": "Optimized for traders and investors",
      "collections": ["intelligence", "market-data", "research", "daily-logs"]
    },
    "content": {
      "description": "Optimized for content creators",
      "collections": ["articles", "drafts", "research", "ideas"]
    },
    "developer": {
      "description": "Optimized for developers",
      "collections": ["docs", "notes", "decisions", "snippets"]
    }
  },
  "integrations": {
    "openclaw": {
      "memory_search": true,
      "memory_get": true,
      "mcp_server": true
    }
  },
  "metrics": {
    "estimated_monthly_savings": "$50-300",
    "setup_time": "5-10 minutes",
    "model_download_size": "~2GB"
  }
}
