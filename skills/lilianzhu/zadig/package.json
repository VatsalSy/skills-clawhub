{
  "name": "zadig-skill",
  "version": "2.2.0",
  "description": "[REQUIRED ENV] ZADIG_API_URL + ZADIG_API_KEY | Zadig v4.2 API Client",
  "main": "index.js",
  "openclaw": {
    "runtime": {
      "type": "node",
      "permissions": [
        "read:env",
        "network:https"
      ],
      "environmentVariables": {
        "required": [
          "ZADIG_API_URL",
          "ZADIG_API_KEY"
        ],
        "optional": [
          "ZADIG_DEFAULT_PROJECT",
          "ZADIG_DEFAULT_ENV"
        ]
      },
      "description": "Zadig API Client - reads .env for credentials, makes HTTPS calls to Zadig server only."
    },
    "features": [
      "DevOps automation",
      "CI/CD workflow management",
      "Kubernetes deployment"
    ]
  },
  "keywords": [
    "zadig",
    "devops",
    "kubernetes",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT"
}
